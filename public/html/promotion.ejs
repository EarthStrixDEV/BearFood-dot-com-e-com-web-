<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/navbar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="../css/promotion.css">
    <link rel="icon" href="http://pm1.narvii.com/6750/effb75eea9a6419839e5f8f18fdbad9721115ac4v2_00.jpg">
    <title>BearFood - Promotion</title>
</head>
<body>
    <%- include('navbar') %>
    <div class="head-banner">
        <img src="../img/banner_promotion.png" alt="">
    </div>
    <div class="list-promotion-item">
        <% Object.values(products).map((data) => { %>
        <form action="/cart/adding-cart" method="post">
            <input type="hidden" name="customer_id" value="<%= customer_id %>" />
            <input
                type="hidden"
                name="prod_id"
                value="<%= data.prod_id %>"
                class="id_product"
            />
            <input type="hidden" name="cart_prod_name" class="cart_prod_name" value="<%= data.prod_name %>">
            <input
                type="hidden"
                name="prod_description"
                value="<%= data.prod_description %>"
                class="description_product"
            />
            <input type="hidden" name="cart_prod_date" value="" class="cart_prod_date">
            <input type="hidden" name="prod_price" class="cart_prod_price" value="<%= data.prod_price %>">
            <div class="promotion-item">
                <div class="promotion-img-box">
                    <img src="<%= data.prod_image %>" alt="">
                </div>
                <h1><%= data.prod_name %></h1>
                <p><%= data.prod_description %></p>
                <% if (customer) { %>
                <button class="add-to-cart" type="submit">Add to Cart</button>
                <% } else { %>
                <button class="add-to-cart" disabled="true">Add to Cart</button>
                <% } %>
            </div>
        </form>
    <% }) %>
    </div>
    <footer>
        <div class="payment">
            <h4>Khai Kong Dot Com</h4>
            <strong>E payment</strong>
            <div class="payment-icon">
                <i class="fa fa-cc-visa" aria-hidden="true"></i>
                <i class="fa fa-cc-mastercard" aria-hidden="true"></i>
                <i class="fa fa-cc-paypal" aria-hidden="true"></i>
                <i class="fa fa-cc-amex" aria-hidden="true"></i>
            </div>
        </div>
        <div class="menu">
            <ul>
                <li>Popular</li>
                <li>Promotion</li>
                <li>Category</li>
                <li>About</li>
            </ul>
            <ul>
                <li>FAQ</li>
                <li>Privacy Policy</li>
                <li>Terms & Conditions</li>
                <li>Return Policy</li>
            </ul>
        </div>
        <div class="contact">
            <p>+6689-xxx-xxxx</p>
            <p>khaikongdotcom@gmail.com</p>
            <div class="social-media-icon">
                <i class="fa fa-facebook" aria-hidden="true"></i>
                <i class="fa fa-twitter" aria-hidden="true"></i>
                <i class="fa fa-instagram" aria-hidden="true"></i>
                <i class="fa fa-youtube" aria-hidden="true"></i>
            </div>
        </div>
    </footer>
</body>
</html>