<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Fredoka One', cursive;
        }

        body {
            background-image: url("https://www.xtrafondos.com/wallpapers/resized/escandalosos-somos-osos-7867.jpg?s=large");
            background-attachment: fixed;
            background-size: auto;
        }

        .container {
            max-width: 1024px;
            padding: 1em 3em 0 3em;
            margin: 0 auto;
            backdrop-filter: blur(10px);
            overflow: hidden;
            border-radius: 20px;
        }

        .head-text {
            margin: 1rem 0 1rem 0;
        }

        .form-container {
            width: 500px;
            height: auto;
        }

        .form-control {
            padding:1rem 0 1rem 0;
        }

        .form-control input {
            width: 600px;
            height: 50px;
            font-size: 1.4rem;
            border-radius: 10px;
            border: 1px solid #33333349;
            padding: 1rem;
        }
        
        .form-control p {
            padding: 0.6rem 0 0.6rem 0;
            font-size: 1.2rem;
        }

        .form-control button {
            width: 120px;
            height: 60px;
            border:1px solid #333;
            border-radius: 15px;
            cursor: pointer;
            background-color: #fff;
            font-size: 1rem;
            transition: all 0.05s ease-out;
        }

        .form-control .preview-image {
            width: 400px;
            height: 400px;
            border: none;
            border-radius: 15px;
            padding: 1em;
            margin: 2em 0 1em 0;
            background-color: buttonface;
        }

        .form-control .preview-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .form-control button:hover {
            box-shadow: 0 0 12px #33333348;
        }

        .form-control button:active {
            background-color: #333;
            color: #fff;
        }

        .return-admin {
            text-decoration: none;
            color: #333;
            padding: 1rem;
            border-bottom: 1px solid #333;
            margin-top: 2rem;
            transition: all 0.06s ease-in;
        }

        .return-admin:hover {
            border-bottom: 3px solid #333;
            background-color: #33333318;
        }

        .return-admin:active {
            background-color: #333;
            color: #fff;
        }
    </style>
    <link rel="icon" href="http://pm1.narvii.com/6750/effb75eea9a6419839e5f8f18fdbad9721115ac4v2_00.jpg">
    <title>BearFood - Edit User</title>
</head>
<body>
    <div class="container">
        <h1 class="head-text">Edit Profile</h1>
        <hr>
        <div class="form-container">
            <% if (customer) { %>
            <form action="/users/editCustomer" method="post">
                <% Object.values(customer).map((data) => { %>
                <input type="hidden" name="edit_id" value="<%= data.customer_id %>">
                <div class="form-control">
                    <p>Username</p>
                    <input type="text" name="edit_username" class="edit_username" value="<%= data.customer_username %>">
                </div>
                <div class="form-control">
                    <p>First Name</p>
                    <input type="text" name="edit_fname" class="edit_fname" value="<%= data.customer_fname %>">
                </div>
                <div class="form-control">
                    <p>Last Name</p>
                    <input type="text" name="edit_lname" class="edit_lname" value="<%= data.customer_lname %>">
                </div>
                <div class="form-control">
                    <p>Email</p>
                    <input type="text" name="edit_email" class="edit_email" value="<%= data.customer_email %>">
                </div>
                <div class="form-control">
                    <p>Password</p>
                    <input type="text" name="edit_password" class="edit_password" value="<%= data.customer_password %>">
                </div>
                <div class="form-control">
                    <p>Image Url</p>
                    <input type="text" name="edit_image" class="edit_image" value="<%= data.customer_image %>">
                    <div class="preview-image">
                        <img src="<%= data.customer_image %>" alt="preview" class="preview">
                    </div>
                    <strong>Preview Image</strong>
                </div>
                <% }) %> 
                <div class="form-control">
                    <button type="submit">Done</button>
                </div>
                <div class="form-control">
                    <a href="/home/userProfile" class="return-admin">Return To User Admin</a>
                </div>
            </form>
            <% } if (seller) { %>
            <form action="/users/editSeller" method="post">
                <% Object.values(seller).map((data) => { %>
                <input type="hidden" name="edit_id" value="<%= data.seller_id %>">
                <div class="form-control">
                    <p>Username</p>
                    <input type="text" name="edit_username" class="edit_username" value="<%= data.seller_username %>">
                </div>
                <div class="form-control">
                    <p>First Name</p>
                    <input type="text" name="edit_fname" class="edit_fname" value="<%= data.seller_fname %>">
                </div>
                <div class="form-control">
                    <p>Last Name</p>
                    <input type="text" name="edit_lname" class="edit_lname" value="<%= data.seller_lname %>">
                </div>
                <div class="form-control">
                    <p>Email</p>
                    <input type="text" name="edit_email" class="edit_email" value="<%= data.seller_email %>">
                </div>
                <div class="form-control">
                    <p>Password</p>
                    <input type="text" name="edit_password" class="edit_password" value="<%= data.seller_password %>">
                </div>
                <div class="form-control">
                    <p>Image Url</p>
                    <input type="text" name="edit_image" class="edit_image" value="<%= data.seller_image %>">
                    <div class="preview-image">
                        <img src="<%= data.seller_image %>" alt="preview" class="preview">
                    </div>
                    <strong>Preview Image</strong>
                </div>
                <% }) %> 
                <div class="form-control">
                    <button type="submit">Done</button>
                </div>
                <div class="form-control">
                    <a href="/home/userProfile" class="return-admin">Return To User Admin</a>
                </div>
            </form>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const update_data_form = document.querySelectorAll('form');
        let image_url = document.querySelectorAll(".edit_image");
        let preview_image = document.querySelectorAll('.preview')

        for (let i = 0;i < update_data_form.length;i++) {
            update_data_form[i].addEventListener('submit', (event) => {
                event.preventDefault()
                Swal.fire({
                    title: "Do you want to save the changes?",
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: "Save",
                    denyButtonText: `Don't save`,
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire("Saved!", "", "success");
                        setTimeout(() => {
                            update_data_form[i].submit()
                        },2000)
                    } else if (result.isDenied) {
                        Swal.fire("Changes are not saved", "", "info");
                        return false;
                    }
                });
                console.log(event.target);
            })
    
            image_url[i].addEventListener('input', (event) => {
                event.preventDefault()
                preview_image[i].src = event.target.value;
            })
        }
    </script>
</body>
</html>