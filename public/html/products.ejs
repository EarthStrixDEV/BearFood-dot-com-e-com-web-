<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/products.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="icon" href="http://pm1.narvii.com/6750/effb75eea9a6419839e5f8f18fdbad9721115ac4v2_00.jpg">
    <title>Product Management</title>
</head>
<body>
    <header>
        <h1 class="header-name">Product Management System</h1>
        <div class="header-monitor">
            <div class="header-item-counter">
                <div class="item-counter">
                    <div class="item-counter-numerics">
                        <h2>Total Products</h2>
                    </div>
                    <% Object.values(total_product).map((item) => { %>
                    <div class="item-counter-label">
                        <p><%= item.total_product %></p>
                    </div>
                    <% }) %>
                </div>
                <div class="item-counter">
                    <div class="item-counter-numerics">
                        <h2>Total Cart</h2>
                    </div>
                    <% Object.values(total_cart).map((item) => { %>
                        <div class="item-counter-label">
                            <p><%= item.total_cart %></p>
                        </div>
                    <% }) %>
                </div>
                <div class="item-counter">
                    <div class="item-counter-numerics">
                        <h2>Total Seller</h2>
                    </div>
                    <% Object.values(total_seller).map((item) => { %>
                        <div class="item-counter-label">
                            <p><%= item.total_seller %></p>
                        </div>
                    <% }) %>
                </div>
                <div class="item-counter">
                    <div class="item-counter-numerics">
                        <h2>Total Order</h2>
                    </div>
                    <% Object.values(total_order).map((item) => { %>
                        <div class="item-counter-label">
                            <p><%= item.total_order %></p>
                        </div>
                    <% }) %>
                </div>
            </div>
            <div class="header-item-adder">
                <a href="/home/add_product">Add Product</a>
            </div>
            <div class="header-item-adder">
                <a href="/home/">Return To Home</a>
            </div>
        </div>
    </header>
    <section>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% Object.values(data).forEach((item) => { %>
                    <tr>
                        <td><%= item.prod_id %></td>
                        <td><%= item.prod_name %></td>
                        <td><%= item.prod_description %></td>
                        <td><%= item.prod_price %></td>
                        <td><a href="/product/edit/product_id=<%= item.prod_id %>" class="btn btn-primary">Edit</a></td>
                        <td><a href="/product/delete/product_id=<%= item.prod_id %>" class="btn btn-danger" onclick="return confirm('Are you sure to delete this product?')">Delete</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>